
.kucun{
	font-size:28rpx;
	color: #ccc;
}
.min-price{
	font-size: 22rpx;
	margin-left: 10rpx;
}
.an-price{
	color: #f47925;
}
.jiage{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin: 5rpx 20rpx;
	position: absolute;
	bottom: 15rpx;
	width: 95%;
	-webkit-box-pack:justify;
	-webkit-justify-content:space-between;
	        justify-content:space-between;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
}
.goodinfo{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin: 10rpx;
}
.goodTitle{
	margin: 10rpx 20rpx;
	font-size:36rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	/*设置成弹性盒子 */
	display: -webkit-box;
	/*显示的个数 */
	-webkit-line-clamp: 2;
	/* 属性规定框的子元素应该被水平或垂直排列。 */
	-webkit-box-orient: vertical;
}
.iteamList{
	height: 450rpx;
	background-color: #fff;
	border-radius: 20rpx;
	box-shadow:#555555 0px 0px 5px;
	margin: 40rpx 0;
	overflow: hidden;
	position: relative;
}
.iteamList image{
	height: 65%;
	width: 100%;
}
.ad{
	height: 200rpx;
	background-color: #79C498;
	text-align: center;
	line-height: 200rpx;
	color: #FFFFFF;
	margin: 10rpx 0;
}
.ad image{
	height: 100%;
	width: 100%;
}
.itam{
	text-align: center;
	padding: 30rpx 60rpx;
	height: 100%;
	font-size: 28rpx;
	display: inline-block;
}
.this{
	color: #79C498;
}
.body{
	margin-top: 8rpx;
	padding: 0 28rpx;
}
.scroll-x{
	position: relative;
	height: 130rpx;
	width: 100%;
	background: #fff;
	top: 0px;
	left: 0px;
	white-space: nowrap;
	overflow: hidden;
}
