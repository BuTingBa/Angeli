
.mtop{
	background-color: #FFFFFF;
	height: 210rpx;
	padding: 46rpx 100rpx;
	display: grid;
	grid-template-columns: 33.33% 33.33% 33.33%;
	grid-template-rows: 85rpx 37rpx;
	justify-items: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.tip{
	display: inline-block;
	width: 36rpx;
	height: 36rpx;
	background-color: red;
	position: absolute;
	text-align: center;
	line-height: 36rpx;
	border-radius: 50%;
	font-size:26rpx;
	margin-left: -18rpx;
	margin-top: -18rpx;
	color:#FFFFFF;
}
.touxiang{
	height: 100rpx;
	width: 100rpx;
	border-radius: 50%;
	grid-column-start: 1;
	grid-column-end: 2;
	grid-row-start: 1;
	grid-row-end: 3;
}
.messageList{
	padding: 18rpx 38rpx;
	display: grid;
	grid-template-columns: 20% 50% 30%;
	grid-template-rows: 50% 50%;
	justify-items: start ;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	position: relative;
}
.messageList text:nth-child(2){
	font-weight:500;
	font-size: 28rpx;
}
.messageList text:nth-child(3){
	font-size:22rpx;
	font-weight:400;
	color:rgba(153,153,153,1);
	justify-self:end;
}
.messageList text:nth-child(4){
	font-size:24rpx;
	font-weight:400;
	color:rgba(153,153,153,1);
	grid-column-start: 2;
	grid-column-end: 4;
}
.hongdian{
	background-color: red;
	width: 11rpx;
	height: 11rpx;
	position: absolute;
	border-radius: 50%;
	right: 38rpx;
	top: 98rpx;
}
.mtop view {
	position: relative;
	vertical-align:top;
}
.mtop view image{
	width: 85rpx;
	height: 85rpx;
	margin-bottom: 8rpx;
}
.mtop text{
	font-size:26rpx;
	font-weight:400;
	line-height:37px;
	color:rgba(54,54,54,1);
}
.messageListBox{
	margin-top: 8rpx;
	background-color: #FFFFFF;
}

